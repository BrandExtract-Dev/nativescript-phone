<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <Page.actionBar>
    <ActionBar class="action-bar" title="NativeScript Phone Demo"></ActionBar>
  </Page.actionBar>
  <StackLayout padding="5">
    <Label text="Enter phone number to call or text" class="h3"/>
    <TextField text="{{ number }}" id="number" hint="Number to call or text..." />
    <Button text="Call Number" tap="callNumber" class="btn btn-primary" />
    <Button text="Call without Prompt" tap="callNumberWithoutPrompt" class="btn btn-primary" />
    <Button text="Text Number" tap="textNumber" class="btn btn-primary" />
    <android>
      <Button text="Request Android Call Permisson" tap="requestAndroidPerm" class="btn btn-primary" />
    </android>
  </StackLayout>
</Page>